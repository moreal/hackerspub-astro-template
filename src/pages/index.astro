---
import { getAllArticles } from "../lib/graphql/client";
import { siteConfig } from "../../site.config";
import { RelativeTime } from "../components/RelativeTime";

console.log(siteConfig);
const articles = await getAllArticles(
  siteConfig.handle,
  siteConfig.minimumVisibility,
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{siteConfig.title}</title>
    <meta name="description" content={siteConfig.description} />
  </head>
  <body class="max-w-4xl mx-auto px-4 py-8">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-2">{siteConfig.title}</h1>
      <p class="text-gray-600">{siteConfig.description}</p>
      <nav class="mt-4 flex gap-4">
        <a href="/" class="text-blue-600 hover:underline">Home</a>
        <a href="/tags" class="text-blue-600 hover:underline">Tags</a>
        <a href="/about" class="text-blue-600 hover:underline">About</a>
      </nav>
    </header>

    <main>
      <h2 class="text-2xl font-bold mb-6">Articles</h2>
      <div class="space-y-6">
        {
          articles.map((article) => (
            <article class="border-b pb-6">
              <h3 class="text-xl font-semibold mb-2">
                <a
                  href={`/posts/${article.publishedYear}/${article.slug}`}
                  class="text-blue-600 hover:underline"
                >
                  {article.name}
                </a>
              </h3>
              <RelativeTime
                client:load
                datetime={article.published}
                className="text-sm text-gray-500"
              />
              {article.tags.length > 0 && (
                <div class="mt-2 flex flex-wrap gap-2">
                  {article.tags.map((tag) => (
                    <a
                      href={`/tag/${tag}`}
                      class="text-xs bg-gray-100 hover:bg-gray-200 px-2 py-1 rounded"
                    >
                      #{tag}
                    </a>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </main>
  </body>
</html>
