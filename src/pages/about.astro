---
import { getActor } from "../lib/graphql/client";
import { siteConfig } from "../../site.config";
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";

const actor = await getActor(siteConfig.handle);
---

<BaseLayout title="About">
  <header class="mb-8">
    <Navigation class="mb-4 flex gap-4" />
  </header>

  <main>
    <div class="flex items-start gap-6 mb-8">
      <img
        src={actor.avatarUrl}
        alt={actor.name || actor.handle}
        class="w-24 h-24 rounded-full"
      />
      <div>
        <h1 class="text-3xl font-bold mb-1">{actor.name || actor.handle}</h1>
        <p class="text-gray-600">{actor.handle}</p>
      </div>
    </div>

    {actor.bio && <div class="prose prose-slate max-w-none" set:html={actor.bio} />}
  </main>
</BaseLayout>
