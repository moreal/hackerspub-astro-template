---
import { getActor } from "../lib/graphql/client";
import { siteConfig } from "../../site.config";

const actor = await getActor(siteConfig.handle);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>About - {siteConfig.title}</title>
  </head>
  <body class="max-w-4xl mx-auto px-4 py-8">
    <header class="mb-8">
      <nav class="mb-4 flex gap-4">
        <a href="/" class="text-blue-600 hover:underline">Home</a>
        <a href="/tags" class="text-blue-600 hover:underline">Tags</a>
        <a href="/about" class="text-blue-600 hover:underline">About</a>
      </nav>
    </header>

    <main>
      <div class="flex items-start gap-6 mb-8">
        <img
          src={actor.avatarUrl}
          alt={actor.name || actor.handle}
          class="w-24 h-24 rounded-full"
        />
        <div>
          <h1 class="text-3xl font-bold mb-1">{actor.name || actor.handle}</h1>
          <p class="text-gray-600">{actor.handle}</p>
        </div>
      </div>

      {actor.bio && <div class="prose max-w-none" set:html={actor.bio} />}
    </main>
  </body>
</html>
